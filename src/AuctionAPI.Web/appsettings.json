{
	"ConnectionStrings": {
		"AuctionDb": "CONNECTION STRING"
	},
	"JwtSettings": {
		"Secret": "YOUR SECRET"
	},
	"AllowedHosts": "*",
	"Serilog": {
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning",
				"Microsoft.EntityFrameworkCore": "Fatal",
				"Serilog.AspNetCore": "Warning"
			}
		},
		"WriteTo": [
			{ "Name": "Console" },
			{
				"Name": "Logger",
				"Args": {
					"configureLogger": {
						"Filter": [
							{
								"Name": "ByIncludingOnly",
								"Args": {
									"expression": "(@Level = 'Error' or @Level = 'Fatal' or @Level = 'Warning')"
								}
							}
						],
						"WriteTo": [
							{
								"Name": "File",
								"Args": {
									"path": "..\\Logs\\.log",
									"rollingInterval": "Day",
									"outputTemplate": "[{Timestamp:HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
								}
							}
						]
					}
				}
			}
		],
		"Properties": {
			"Application": "MultipleLogFilesSample"
		}
	}
}